<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="35">

        <TextView
            android:id="@+id/history_adapter_date"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/bowlby_one_sc"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/history_adapter_pace"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="50"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/history_adapter_kcal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="50"
                android:fontFamily="@font/paprika"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:id="@+id/history_adapter_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="50" />


        </LinearLayout>






    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="65">
        <TextView
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:fontFamily="@font/bangers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/history_adapter_distance"/>
    </LinearLayout>
</LinearLayout>